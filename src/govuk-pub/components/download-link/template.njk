{%- if params.href %}
<a class="govuk-pub-download-link {{- ' ' + params.classes if params.classes }}" href="{{ params.href }}" {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
  <svg class="govuk-pub-download-link__icon" aria-hidden="true" viewBox="0 0 25 25" height="25" width="25" xmlns="http://www.w3.org/2000/svg">
    <g>
      <path d="M23 5h2v20H5v-2h18V5z"></path>
      <path d="M0 0h20v20H0z"></path>
    </g>
  </svg>{{- params.html | safe if params.html else params.text | default('Download file') -}}
</a>
{% endif -%}
