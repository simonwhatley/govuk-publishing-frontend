<div class="govuk-pub-inset-prompt {{- ' govuk-pub-inset-prompt--error' if params.error }} {{- ' ' + params.classes if params.classes }}" {%- for attribute, value in params.attributes %} {{attribute}}="{{value}}"{% endfor %}>
  {%- if params.heading.html | length or params.heading.text | length %}
    <h{{ params.heading.headingLevel | default(3) }} class="govuk-pub-inset-prompt__title {{- ' ' + params.heading.classes if params.classes }}" {%- for attribute, value in params.heading.attributes %} {{attribute}}="{{value}}"{% endfor %}>
      {{- params.heading.html | safe if params.heading.html else params.heading.text -}}
    </h{{ params.heading.headingLevel | default(3) }}>
  {% endif -%}
  <div class="govuk-pub-inset-prompt__body {{- ' ' + params.description.classes if params.description.classes }}" {%- for attribute, value in params.description.attributes %} {{attribute}}="{{value}}"{% endfor %}>
    {%- if params.description %}
      {{- params.description.html | safe if params.description.html else params.description.text -}}
    {% else %}
      {%- if params.items %}
        <ul class="govuk-list govuk-pub-inset-prompt__list">
          {%- for item in params.items %}
            <li>
              {% if item.href %}
                <a class="govuk-link govuk-link--no-visited-state {{- ' ' + item.classes if item.classes }}" href="{{ item.href }}" {%- for attribute, value in item.attributes %} {{attribute}}="{{value}}"{% endfor %}>
                  {{- item.html | safe if item.html else item.text -}}
                </a>
              {% else %}
                {{- item.html | safe if item.html else item.text -}}
              {% endif %}
            </li>
          {% endfor -%}
        </ul>
      {% endif -%}
    {% endif -%}
  </div>
</div>
