<nav class="govuk-pub-secondary-navigation {{- ' ' + params.classes if params.classes}}" {%- if params.label %} aria-label="{{ params.label }}"{% endif %} {%- for attribute, value in params.attributes -%} {{ attribute }}="{{ value }}"{% endfor %}>
  <ul class="govuk-pub-secondary-navigation__list">
    {%- for item in params.items %}
      <li class="govuk-pub-secondary-navigation__list-item {{- ' govuk-pub-secondary-navigation__list-item--current' if item.active }} {{- ' ' + item.classes if item.classes}}">
        {% if item.href %}
          <a class="govuk-link govuk-link--no-visited-state" {{ 'aria-current="page"' | safe if item.active }} href="{{ item.href }}" {%- for attribute, value in item.attributes -%} {{ attribute }}="{{ value }}"{% endfor %}>
            {{- item.html | safe if item.html else item.text -}}
          </a>
        {% else %}
          {{- item.html | safe if item.html else item.text -}}
        {% endif %}
      </li>
    {% endfor -%}
  </ul>
</nav>
